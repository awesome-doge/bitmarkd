{
  "variables": {
    "bitmarkd_version": "0.12.0"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "ap-northeast-1",
      "source_ami": "ami-09674965b0d4019fb",
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "force_delete_snapshot": true,
      "ami_groups": ["all"],
      "ami_name": "bitmarkd-{{ user `bitmarkd_version` }}",
      "tags": {
        "Name": "bitmarkd-image-{{ user `bitmarkd_version` }}"
      }
    },
    {
      "type": "digitalocean",
      "image": "freebsd-12-x64",
      "region": "sgp1",
      "snapshot_name": "packer-bitmarkd-{{ user `bitmarkd_version` }}",
      "size": "s-1vcpu-1gb",
      "ssh_username": "freebsd"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "./packer_aws.sh",
        "./packer_do.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}",
      "environment_vars": [
        "BITMARKD_VERSION={{ user `bitmarkd_version` }}"
      ]
    }
  ]
}
